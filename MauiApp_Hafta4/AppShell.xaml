<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp_Hafta4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp_Hafta4"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiApp_Hafta4">

    <ShellContent
        Icon="home.png"
        Title="Ana Sayfa"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Icon="contacts.png"
        Title="Kişiler"
        ContentTemplate="{DataTemplate local:UsersPage}"
        Route="UsersPage" />

    <ShellContent
        Icon="contact.png"
        Title="Kişi Bilgileri"
        ContentTemplate="{DataTemplate local:UserDetails}"
        Route="UserDetails" />


</Shell>
